{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2015",
        "jsx": "preserve",
        "removeComments": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": false,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": true,
        "allowJs": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "@icon1/core": [
                "icon1-core/src"
            ],
            "@icon1/core/*": [
                "icon1-core/src/*"
            ],
            "@icon1/mui": [
                "icon1-mui/src"
            ],
            "@icon1/mui/*": [
                "icon1-mui/src/*"
            ],
            "@icon1/react": [
                "icon1-react/src"
            ],
            "@icon1/react/*": [
                "icon1-react/src/*"
            ]
        }
    },
    "exclude": [
        "**/build/",
        "**/node_modules/"
    ]
}
